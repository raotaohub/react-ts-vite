{
   "compilerOptions": {
      "experimentalDecorators": true,
      "baseUrl": "./src",
      "paths": {
         "@/*": ["*"],
         "@components/*": ["components/*"],
         "@public/*": ["components/public/*"],
         "@store/*": ["store/*"],
         "@routes/*": ["routes/*"],
         "@utils/*": ["utils/*"],
         "@style/*": ["style/*"],
         "@services/*": ["services/*"],

         // "@view/*": ["components/view/*"] /* 存放不可复用的业务组件 */,
         // "@common/*": ["components/common/*"] /* 存放与业务无关的组件 */,
         // "@constants/*": ["constants/*"] /*存放枚举、常量*/,
         // "@utils/*": ["utils/*"] /* 存放工具类 */,
         // "@services/*": ["services/*"] /*存放服务端api接口*/
      },
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react"
   },
   "include": ["./src"],
   "exclude": ["node_modules"]
}
